  <script>
    document.addEventListener('DOMContentLoaded', () => {
        const productCatalog =;

        const recommendedProducts =;

        const categories =;

        const categoryContainer = document.getElementById('category-container');
        const recommendedContainer = document.getElementById('recommendedProducts');
        let cart =;

        function createStarRating(rating) {
            const fullStars = Math.floor(rating);
            const halfStar = rating % 1!== 0;
            let stars = '‚òÖ‚òÖ‚òÖ‚òÖ‚òÖ'.substring(0, fullStars);
            if (halfStar) stars += '¬Ω';
            stars += '‚òÜ‚òÜ‚òÜ‚òÜ‚òÜ'.substring(0, 5 - stars.length);
            return `<div class="text-yellow-500 text-xs" aria-label="Calificaci√≥n de ${rating} de 5 estrellas">${stars}</div>`;
        }

        function createProductCard(p, isCarousel = false) {
            const cardClass = isCarousel? 'product-card bg-gray-50 rounded-lg p-4 flex-shrink-0 w-64' : 'product-card bg-white rounded-lg p-3 flex flex-col items-center text-center';
            return `
                <article class="${cardClass}">
                    <img src="${p.image}" alt="${p.name}" class="w-full h-32 object-cover rounded-md mb-3">
                    <div class="w-full flex flex-col flex-grow">
                        <h4 class="font-semibold text-sm">${p.name}</h4>
                        <p class="text-xs text-gray-500 truncate mt-1">${p.description}</p>
                        <div class="flex items-center justify-center gap-2 mt-2">
                            ${createStarRating(p.rating)}
                            <span class="text-xs text-gray-400">(${p.reviews})</span>
                        </div>
                        <div class="flex justify-between items-center mt-auto pt-3">
                            <span class="font-bold text-[var(--lani-secondary)]">${p.price >= 100? '$' + p.price.toFixed(0) : '$' + p.price.toFixed(2)}</span>
                            <button class="px-3 py-1 text-xs rounded-full bg-[var(--lani-primary)] text-white add-to-cart" data-id="${p.id}">A√±adir</button>
                        </div>
                    </div>
                </article>
            `;
        }

        function renderCategoriesAndProducts() {
            categoryContainer.innerHTML = '';
            categories.forEach(cat => {
                const catElement = document.createElement('div');
                catElement.className = 'bg-white rounded-2xl shadow p-4';
                catElement.innerHTML = `
                    <div class="flex items-center justify-between">
                        <h3 class="font-bold text-lg">${cat.title}</h3>
                        <a href="#" class="text-sm text-[var(--lani-primary)] font-semibold">Ver todo ‚Üí</a>
                    </div>
                    <p class="text-sm text-gray-600 mt-2">${cat.desc}</p>
                    <div id="${cat.id}Products" class="grid grid-cols-1 sm:grid-cols-2 gap-3 mt-4"></div>
                `;
                categoryContainer.appendChild(catElement);

                const productContainer = document.getElementById(`${cat.id}Products`);
                productCatalog.filter(p => p.category === cat.id).slice(0, 2).forEach(p => {
                    productContainer.innerHTML += createProductCard(p);
                });
            });
        }

        function renderRecommendedProducts() {
            recommendedContainer.innerHTML = '';
            recommendedProducts.forEach(p => {
                recommendedContainer.innerHTML += createProductCard(p, true);
            });
        }

        function attachAddListeners() {
            document.querySelectorAll('.add-to-cart').forEach(btn => {
                btn.onclick = (e) => {
                    e.stopPropagation();
                    const id = btn.dataset.id;
                    const product = [...productCatalog,...recommendedProducts].find(p => p.id === id);
                    if (!product) return;
                    const existing = cart.find(i => i.id === id);
                    if (existing) existing.qty++;
                    else cart.push({...product, qty: 1 });
                    updateCart();
                };
            });
        }

        function updateCart() {
            const cartItemsEl = document.getElementById('cartItems');
            const cartTotalEl = document.getElementById('cartTotal');
            cartItemsEl.innerHTML = '';
            let total = 0;
            cart.forEach(item => {
                const li = document.createElement('li');
                li.className = 'flex justify-between items-center bg-gray-50 p-3 rounded';
                li.innerHTML = `
                    <div class="flex-1">
                        <div class="font-semibold">${item.name}</div>
                        <div class="text-xs text-gray-500">x${item.qty}</div>
                    </div>
                    <div class="font-bold text-[var(--lani-secondary)]">
                        ${item.price >= 100? '$' + (item.price * item.qty).toFixed(0) : '$' + (item.price * item.qty).toFixed(2)}
                    </div>`;
                cartItemsEl.appendChild(li);
                total += item.price * item.qty;
            });
            cartTotalEl.textContent = '$' + total.toFixed(2);
            updateCartCount();
        }

        function updateCartCount() {
            const count = cart.reduce((s, i) => s + i.qty, 0);
            document.getElementById('cartCount').textContent = count;
        }

        // Modal logic
        const carritoBtn = document.getElementById('carritoBtn');
        const carritoModal = document.getElementById('carritoModal');
        const closeModal = document.getElementById('closeModal');
        carritoBtn.addEventListener('click', () => carritoModal.classList.remove('hidden'));
        closeModal.addEventListener('click', () => carritoModal.classList.add('hidden'));
        document.getElementById('checkoutBtn').addEventListener('click', () => {
            alert('Simulaci√≥n: redirigiendo a pasarela Lafise.');
        });

        // Initial render
        renderCategoriesAndProducts();
        renderRecommendedProducts();
        attachAddListeners();
    });
  </script>

</body>
